<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical"
    tools:context="ch.pistachios.wuerschapp.frontend.WurschActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <ImageView
        android:id="@+id/weursch_header"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_wuerch" />

    <ImageView
        android:id="@+id/wuerschImage"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="#ffffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="#ffffffff"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/wuersch_yes"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:background="@null"
            android:src="@mipmap/ic_yes" />

        <ImageButton
            android:id="@+id/wuersch_no"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.33"
            android:background="@null"
            android:src="@mipmap/ic_no" />

    </LinearLayout>

</LinearLayout>
